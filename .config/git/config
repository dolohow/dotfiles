[alias]
  b = branch
  c = commit
  co = checkout
  cp = cherry-pick
  d = diff
  dt = difftool
  dc = diff --cached
  m = merge
  pl = pull
  ps = push
  r = reset
  s = status
[core]
  editor = vim
[credential]
  helper = cache --timeout=6048000
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[log]
  abbrevCommit = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool "vimdiff"]
  prompt = true
  cmd = vim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
  default = current
[rebase]
  autosquash = true
